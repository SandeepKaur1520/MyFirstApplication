<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".signup"
    android:orientation="vertical"
    tools:showIn="@layout/activity_signup"
    android:padding="16dp"
    android:background="@mipmap/sandy3">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/sandy2"
        android:textAlignment="center" />
        //app:civ_border_width="0dp"
        //app:civ_border_color="#FF000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#031C29"
        android:textStyle="bold"
        android:textSize="25dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:drawableRight="@drawable/ic_account_box_black_24dp"
            android:drawableEnd="@drawable/ic_account_box_black_24dp"
            android:hint="First name"
            android:background="@drawable/text1"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="30dp"
            android:singleLine="true"
            android:id="@+id/etfirst_name"
            />
        <EditText
            android:id="@+id/etlast_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:drawableRight="@drawable/ic_account_box_black_24dp"
            android:drawableEnd="@drawable/ic_account_box_black_24dp"
            android:hint="Last name"
            android:background="@drawable/text2"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="30dp"
            android:singleLine="true"/>
    </LinearLayout>

    <EditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/text3"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawableEnd="@drawable/ic_email_black_24dp"
        android:drawableRight="@drawable/ic_email_black_24dp"
        android:hint="E-mail"
        android:padding="15dp"
        android:singleLine="true"
        android:textSize="20sp" />
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawableRight="@drawable/ic_lock_black_24dp"
            android:drawableEnd="@drawable/ic_lock_black_24dp"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:background="@drawable/text4"
            android:padding="15dp"
            android:textSize="20sp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:imeOptions="actionDone"/>/>

    <EditText
        android:id="@+id/etconfirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawableRight="@drawable/ic_lock_black_24dp"
        android:drawableEnd="@drawable/ic_lock_black_24dp"
        android:layout_marginTop="10dp"
        android:hint="Confirm Password"
        android:background="@drawable/text5"
        android:padding="15dp"
        android:textSize="20sp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:imeOptions="actionDone"/>
    <EditText
        android:id="@+id/etlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:drawableRight="@drawable/ic_place_black_24dp"
        android:drawableEnd="@drawable/ic_place_black_24dp"
        android:layout_marginTop="10dp"
        android:hint="Location"
        android:background="@drawable/text6"
        android:padding="15dp"
        android:textSize="20sp"
        android:singleLine="true"/>
    <Button
        android:id="@+id/bregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text7"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Register"
        android:textColor="#FCFDFF"
        android:padding="15dp"
        android:textSize="20sp"

        />


</LinearLayout>



